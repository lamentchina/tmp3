@-webkit-keyframes rotate {
  from {-webkit-transform:rotate(0deg);}
  to {-webkit-transform:rotate(360deg);}
}
.hide
  display none
.bg
  // background url('http://imgcache.qq.com/music/photo/album_300/46/300_albumpic_654246_0.jpg') no-repeat center center
  background url('http://imgcache.qq.com/music/photo/album_300/36/300_albumpic_644836_0.jpg') no-repeat center center
  -webkit-filter blur(50px)
  background-size cover
  height 100%
  width 100%
  position absolute
  top 0
  left 0

.container
  position relative
  .animate
    -webkit-animation rotate 8s linear infinite
  .animate-pause
    -webkit-animation-play-state paused
  .avator
    // background url('http://imgcache.qq.com/music/photo/album_300/46/300_albumpic_654246_0.jpg') no-repeat
    background url('http://imgcache.qq.com/music/photo/album_300/36/300_albumpic_644836_0.jpg') no-repeat
    background-size cover
    height 200px
    width 200px
    border-radius 50%
    margin 50px auto
    position relative
    box-shadow 0px 0px 10px rgba(0, 0, 0, 0.44)
    .circle
      border 1px solid #fff
      width 30%
      height 30%
      border-radius 50%
      position absolute
      top 35%
      left 35%
      background-color rgba(255, 255, 255, 0.07)
    .btn-center
      position absolute
      width 25%
      height 25%
      top 38%
      left 38%
      background-color rgba(0, 0, 0, 0.63)
      border-radius 50%
    .btn-play
      display inline-block
      &:before
        content ''
        border-top 15px solid transparent
        border-left 15px solid #fff
        border-bottom 15px solid transparent
        font-size 10px
        border-right 0
        margin-left 6px
        display inline-block
    .btn-pause
      display inline-block
      &:before
        content ''
        border-left 5px solid #fff
        margin-right 5px
      &:after
        content ''
        border-right 5px solid #fff
  .lrcwrap
    overflow hidden
    display inline-block
    width 100%
    height 64px
    padding 2px
    position absolute
    top 280px
    text-align center
    .lrcbox
      p
        margin 0
        height 30px
        line-height 30px
        color rgba(82, 82, 82, 0.45)
      .current
        color #fff
        text-shadow 1px 1px 1px #000
